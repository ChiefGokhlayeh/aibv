{
    "name": "Miniconda (Python 3)",
    "build": {
        "context": "..",
        "dockerfile": "Dockerfile"
    },

    "settings": {
        "python.defaultInterpreterPath": "/opt/conda/bin/python",
        "python.formatting.blackPath": "/usr/local/py-utils/bin/black",
        "python.formatting.provider": "black",
        "python.linting.enabled": true,
        "python.linting.flake8Enabled": true,
        "python.linting.flake8Path": "/usr/local/py-utils/bin/flake8",
        "latex-workshop.docker.enabled": false
    },

    "runArgs": [
        "--gpus=all,\"capabilities=compute,utility\"",
        "--group-add=986", // workaround for non-root remoteUser: add user to "video" group
        "--privileged"
    ],

    "features": {
        "desktop-lite": {
            "password": "vscode",
            "webPort": "6080",
            "vncPort": "5901"
        }
    },

    "extensions": [
        "bungcip.better-toml",
        "davidanson.vscode-markdownlint",
        "eamodio.gitlens",
        "esbenp.prettier-vscode",
        "James-Yu.latex-workshop",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "valentjn.vscode-ltex"
    ],

    "postCreateCommand": "pre-commit install && nbstripout install && sudo /opt/conda/condabin/mamba install -y -c conda-forge -n base tensorflow-gpu",

    "remoteUser": "vscode",

    "remoteEnv": {
        "GIT_EDITOR": "vim"
    }
}
